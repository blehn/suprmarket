!!! Strict
%html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")
  %head
    %title Suprmarket
    %meta(http-equiv="Content-Type" content="text/html;charset=utf-8")
    
    = javascript_include_tag 'jquery', 'jquery.hint.js', 'jquery-ui', 'jquery.corner', 'application'
    = stylesheet_link_tag 'smoothness/screen', 'screen'
    = yield :head
  %body{:class => controller.controller_name}
    .container
      .header
        = render 'users/bar'
      .content
        = render 'shared/messages'
        = yield
    .footer
      = yield :footer
      .links
        = link_to t(:about).capitalize, about_path
        = link_to t(:rules).capitalize, rules_path
        = link_to t(:support).capitalize, support_path
        = link_to t(:feedback).capitalize, feedback_path
        = link_to t(:contact).capitalize, contact_path
      Copyright 2009. Suprmarket.
